@using University.Models.DB
@model List<Course>

@{
    ViewBag.Title = "Courses";
    Layout = "_Layout";
}

<h2>Courses</h2>
<div class="table-section">
    @if (@Model.Count == 0)
    {
        <p>No courses found</p>
    }
    else
    {
        <table style="width: 100%">
            <tr>
                <th>Name</th>
                <th>Description</th>
            </tr>
            @foreach (var course in @Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink($"{course.Name}", "Details", "Courses", new { id = @course.CourseId }, null)
                    </td>
                    <td>@course.Description</td>
                </tr>
            }
        </table>
    }
</div>
