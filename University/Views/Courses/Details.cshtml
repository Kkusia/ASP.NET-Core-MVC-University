@using University.Models.DB
@model List<Group>

@{
    ViewBag.Title = "Groups";
    Layout = "_Layout";
}

<h2>Groups</h2>
<div class="table-section">
    @if (@Model.Count == 0)
    {
        <p>No groups found</p>
    }
    else
    {
        <table style="width: 100%">
            <tr>
                <th>Group</th>
            </tr>
            @foreach (var group in @Model)
            {
                <tr>
                    <td>@Html.ActionLink($"{group.Name}", "Details", "Groups", new { id = @group.GroupId }, null)</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Groups", new { id = @group.GroupId })</td>
                </tr>
            }
        </table>
    }
</div> 
